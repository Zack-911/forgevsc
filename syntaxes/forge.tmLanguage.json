{
    "scopeName": "source.forge",
    "patterns": [
        {
            "match": "\\$[a-zA-Z0-9_]+",
            "name": "entity.name.function.forge"
        },
        {
            "match": "\\[",
            "name": "punctuation.section.bracket.begin.forge"
