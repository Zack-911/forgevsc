{
    "name": "forgevsc",
    "displayName": "ForgeScript",
    "description": "Visual Studio Code Extension For ForgeScript",
    "publisher": "Zack-911",
    "icon": "forgescript.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/zack-911/forgevsc.git"
    },
    "version": "1.0.4",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "workspaceContains:forgeconfig.json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": "forgeconfig.json",
                "url": "./schema.json"
            }
        ],
        "commands": [
            {
                "command": "forgevsc.createConfig",
                "title": "Create Forge Config",
                "category": "ForgeScript"
            },
            {
                "command": "forgevsc.updateLSP",
                "title": "Update ForgeLSP Binary",
                "category": "ForgeScript"
            },
            {
                "command": "forgevsc.useCustomBinary",
                "title": "Use Custom LSP Binary",
                "category": "ForgeScript"
            },
            {
                "command": "forgevsc.resetLspPath",
                "title": "Reset LSP Binary to Default",
                "category": "ForgeScript"
            }
        ],
        "languages": [
            {
                "id": "forge",
                "aliases": [
                    "ForgeScript",
                    "forge"
                ],
                "extensions": [
                    ".forge"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "forge",
                "scopeName": "source.forge",
                "path": "./syntaxes/forge.tmLanguage.json"
            },
            {
                "scopeName": "forge.injection",
                "path": "./syntaxes/injection.json",
                "injectTo": [
                    "source.js",
                    "source.ts",
                    "source.js.jsx",
                    "source.tsx"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "ForgeLSP",
            "properties": {
                "forgevsc.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "axios": "^1.6.0",
        "fs-extra": "^11.1.1"
    }
}